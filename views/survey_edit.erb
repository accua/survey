<div class="container">
  <h3>Update <%= @survey.title() %> </h3>
  <form action="/surveys/<%= @survey.id() %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <label for="title">Redescribe your survey title:</label>
    <input name="title" type="text" required autofocus>
    <button class = "btn waves-effect waves-light" type="submit">Update</button>
  </form><br>
  <form action="/surveys/<%= @survey.id() %>" method="post">
    <input name="_method" type="hidden" value="delete">
    <button type="submit" class="btn waves-effect waves-light">Delete</button>
  </form>
</div>
