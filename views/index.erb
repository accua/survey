<div class="container">
  <% @surveys.each do |survey| %>
    <ul>
      <li><a href="/surveys/<%= survey.id() %>"><%= survey.title %></a></li>
    </ul>
  <% end %>

  <form action='/survey/new' method="post">
    <label for="survey">Enter a survey title</label>
    <input name="title" type="text" autofocus>
    <button type="submit" class="btn waves-effect waves-light">Submit<i class="material-icons right">send</i></button>
    <a class="btn btn-default" href="/method">Clear List</a>
  </form>
</div>
